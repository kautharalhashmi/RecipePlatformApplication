@model RecipePlatform.Models.ViewModel.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Login";
}


   
        <form asp-action="Login" method="post" class="container">
            <div class="left">
                <img src="~/imgs/5.png" alt="Chef Image" />
            </div>
            <div class="right">
            <div id="loginForm">
                <h2>Welcome Back!</h2>

@model RecipePlatform.Models.ViewModel.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Register";
}


        <form asp-action="Register" method="post" class="container">
            <div class="left">
                <img src="~/imgs/5.png" alt="Chef Image" />
            </div>
            <div class="right">
                <h2>Register</h2>
                <p class="slogan">Create an account to get started.</p>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" class="form-control" required />
                </div>

                <div class="form-group">
                    <input asp-for="Password" placeholder="Password" type="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <input asp-for="FullName" placeholder="Full Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <input asp-for="Gender" placeholder="Gender" class="form-control" required />
                </div>

                <div class="form-group">
                    <input asp-for="Country" placeholder="Country" class="form-control" required />
                </div>

                <button type="submit">Register</button>

                <div class="toggle">
                    Already have an account? <a href="/Account/Login">Login here</a>
                </div>
            </div>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
